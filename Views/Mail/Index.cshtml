
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Send Mail</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        <h2>Send Mail</h2>
        <div>Subject</div>
        <input type="text" name="subject" />
